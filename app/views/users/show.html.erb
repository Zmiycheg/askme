<div class="user-box">
  <h2 class="title-lg mt-lg"><%= @user.name %></h2>

  <div class="mt">
    <%= render partial: 'users/user_avatar', locals: {user: @user} %>
  </div>

  <% if current_user == @user %>
    <p class="mt md-lg">
      <%=link_to fa_icon('pencil'), edit_user_path(@user), title: 'Редактировать профиль' %>
    </p>
  <% end %>

  <p class="text-bold mt md-lg">@<%= @user.nickname %></p><br/>
</div>

<div class="container mt">
  <%= link_to "Спроси меня", new_question_path(user_nickname: @user), class: 'button button-yellow' %>
</div>
<div class="container">
  <p class="mt">
    <%= render 'questions/form', question: @question %>
  </p>
</div>

<div class="container mt-sm">
<h2  class="title-lg">
  <%= @questions.count %>
  <%= inclination(@questions.count, 'вопрос', 'вопроса', 'вопросов') %>
</h2>
</div>

 <% @questions.each do |question| %>
  <div class="mt-sm container ">
    <%= render question %>
  </div>
 <% end %>
